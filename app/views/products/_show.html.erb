<div id="product-details-<%= @product.id %>" class="product-box">
  <div class="image-wrapper">
    <%= image_tag @product.image.url(:medium), class: "responsive-img" %>
  </div>
  <div class="product-info">
    <h1><%= @product.name %></h1>
    <p><%= @product.description %></p>
    <p><%= number_to_currency @product.price %></p>

    <%= form_for @order_item, remote: true do |f| %>
      <%= f.hidden_field :product_id, value: @product.id %>
        <%= f.number_field :quantity, value: 1, class: 'quantity-input' %>
        <%= f.submit "Add to cart", class: "waves-effect waves-light btn" %>
    <% end %>
  </div>

</div>
