<h1>Shopping Cart</h1>

<% if @order_items.any? %>
  <%= render "orders/show", order: current_order  %>
  <p id="finalize-link">
    <%= link_to "Finalize Order", finalize_path %>
  </p>
<% else %>
  <p>Your shopping cart is empty.</p>
<% end %>

<% if @previous_orders %>
  <h3>Your Order History:</h3>
  <% @previous_orders.each do |order| %>
    <h4>Order id: <%= order.id %> was completed on: <%= order.updated_at.strftime("%c") %></h4>
    <%= render "orders/show", order: order  %>
  <% end %>
<% end %>
